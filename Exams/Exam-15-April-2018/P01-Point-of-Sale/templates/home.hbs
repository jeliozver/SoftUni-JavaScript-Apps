{{#if isAuth}}
    {{> header}}
    <section id="create-receipt-view">
        <h1>Create Receipt</h1>
        <div class="table">
            <div class="table-head">
                <div class="col wide">Product Name</div>
                <div class="col wide">Quantity</div>
                <div class="col wide">Price per Unit</div>
                <div class="col">Sub-total</div>
                <div class="col">Action</div>
            </div>
            <div id="active-entries">
                {{#each entries}}
                    {{> entry}}
                {{/each}}
            </div>
            <div class="row">
                <form action="#/create" method="post" id="create-entry-form">
                    <div class="col wide">
                        <input name="type" placeholder="Product name">
                    </div>
                    <div class="col wide">
                        <input name="qty" id="sQty" placeholder="Quantity">
                    </div>
                    <div class="col wide">
                        <input name="price" id="sPrice" placeholder="Price per Unit">
                    </div>
                    <div class="col" id="sTotalPartial">Sub-total</div>
                    <div class="col">
                        <input id="addItemBtn" type="submit" value="Add"/>
                    </div>
                </form>
            </div>
            <div class="table-foot">
                <form action="#/checkout" method="post" id="create-receipt-form">
                    <div class="col wide">
                    </div>
                    <div class="col wide">
                    </div>
                    <div class="col wide right">Total:</div>
                    <div id="totalOne" class="col">{{total}}</div>
                    <div class="col">
                        <input id="checkoutBtn" type="submit" value="Checkout"/>
                    </div>
                    <input type="hidden" id="recId" name="receiptId" value="{{id}}"/>
                    <input type="hidden" name="productCount" value="{{productCount}}"/>
                    <input type="hidden" id="#totalTwo" name="total" value="{{total}}"/>
                </form>
            </div>
        </div>
    </section>
{{else}}
    {{> viewRegisterLogin}}
{{/if}}
{{> footer}}