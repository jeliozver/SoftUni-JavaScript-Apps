<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{url}}">
                <img src="{{imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{url}}">{{title}}</a>
            </div>
            <div class="details">
                {{#if description}}
                    <p>{{description}}</p>
                {{else}}
                    <p>No description</p>
                {{/if}}
                <div class="info">submitted {{submitTime}} ago by {{author}}</div>
                {{#if isAuthor}}
                    <div class="controls">
                        <ul>
                            <li class="action"><a class="editLink" href="#/edit/:{{_id}}">edit</a></li>
                            <li class="action"><a class="deleteLink" href="#/delete/:{{_id}}">delete</a></li>
                        </ul>
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form action="#/addComment/:{{_id}}" method="post" id="commentForm">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comments}}
        {{> comment}}
    {{else}}
        No comments yet.
    {{/each}}
</section>