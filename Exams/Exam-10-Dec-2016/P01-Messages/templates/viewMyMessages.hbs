{{> header}}
<main>
    <section id="viewMyMessages">
        <h1>My Messages</h1>
        <div class="messages" id="myMessages">
            <table>
                <thead>
                <tr>
                    <th>From</th>
                    <th>Message</th>
                    <th>Date Received</th>
                </tr>
                </thead>
                <tbody>
                {{#each messages}}
                    {{> messageReceived}}
                {{/each}}
                </tbody>
            </table>
        </div>
    </section>
</main>
{{> footer}}